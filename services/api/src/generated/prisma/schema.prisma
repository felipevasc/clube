generator client {
  provider      = "prisma-client-js"
  output        = "../src/generated/prisma"
  // Keep WSL/Linux working even if `prisma generate` runs on Windows.
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

// --- USERS ---

model User {
  id                String     @id
  name              String
  bio               String
  avatarUrl         String
  coverUrl          String     @default("")
  isAdmin           Boolean    @default(false)
  passwordHash      String     @default("")
  passwordResetCode String?
  createdAt         DateTime   @default(now())
  updatedAt         DateTime   @updatedAt
  cities            UserCity[]
  createdBooks      Book[]     @relation("BookCreator")
  createdClubBooks  ClubBook[] @relation("ClubBookCreator")
}

model Invitation {
  id        String   @id
  city      String
  createdBy String
  isUsed    Boolean  @default(false)
  usedBy    String?
  createdAt DateTime @default(now())
}

model UserCity {
  id     String @id @default(cuid())
  userId String
  city   String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, city])
}

// --- BOOKS ---

model Book {
  id                 String           @id @default(cuid())
  title              String
  author             String
  coverUrl           String           @default("")
  synopsis           String           @default("")
  aiStyleDescription String           @default("")
  categories         Category[]
  styleImages        BookStyleImage[]
  createdByUserId    String?
  indicationComment  String           @default("")
  createdAt          DateTime         @default(now())

  createdByUser User?        @relation("BookCreator", fields: [createdByUserId], references: [id])
  clubBooks     ClubBook[]
  pollOptions   PollOption[]

  @@unique([title, author])
  @@index([title])
  @@index([author])
}

model BookStyleImage {
  id     String @id @default(cuid())
  bookId String
  url    String
  book   Book   @relation(fields: [bookId], references: [id], onDelete: Cascade)

  @@index([bookId])
}

model Category {
  id    String @id @default(cuid())
  name  String @unique
  books Book[]
}

// --- GROUPS ---

model Group {
  id          String   @id @default(cuid())
  name        String
  description String
  ownerId     String
  createdAt   DateTime @default(now())

  memberships           Membership[]
  invites               GroupInvite[]
  joinRequests          JoinRequest[]
  bookOfMonthSelections GroupBookOfMonthSelection[]
}

model Membership {
  id      String @id @default(cuid())
  groupId String
  userId  String
  role    String

  group Group @relation(fields: [groupId], references: [id], onDelete: Cascade)

  @@unique([groupId, userId])
  @@index([userId])
}

model JoinRequest {
  id        String   @id @default(cuid())
  groupId   String
  userId    String
  status    String
  createdAt DateTime @default(now())

  group Group @relation(fields: [groupId], references: [id], onDelete: Cascade)

  @@unique([groupId, userId, status])
  @@index([userId])
}

model GroupInvite {
  id              String    @id @default(cuid())
  groupId         String
  createdByUserId String
  createdAt       DateTime  @default(now())
  revokedAt       DateTime?

  group Group @relation(fields: [groupId], references: [id], onDelete: Cascade)

  @@index([groupId])
  @@index([revokedAt])
}

model GroupBookOfMonthSelection {
  id          String   @id @default(cuid())
  groupId     String
  bookId      String
  setByUserId String
  setAt       DateTime @default(now())

  group Group @relation(fields: [groupId], references: [id], onDelete: Cascade)

  @@index([groupId, setAt])
  @@index([bookId])
}

model ClubBook {
  id                String    @id @default(cuid())
  bookId            String
  title             String
  author            String
  coverUrl          String    @default("")
  colorKey          String
  city              String    @default("FORTALEZA")
  month             Int
  year              Int
  isActive          Boolean   @default(false)
  createdByUserId   String
  indicationComment String    @default("")
  createdAt         DateTime  @default(now())
  activatedAt       DateTime?

  createdByUser User @relation("ClubBookCreator", fields: [createdByUserId], references: [id])
  book          Book @relation(fields: [bookId], references: [id])

  messages  ClubBookMessage[]
  artifacts ClubBookArtifact[]
  events    ClubEvent[]

  @@index([createdAt])
  @@index([isActive])
  @@index([year, month, city])
}

model ClubBookMessage {
  id         String   @id @default(cuid())
  clubBookId String
  userId     String
  text       String
  createdAt  DateTime @default(now())

  clubBook ClubBook @relation(fields: [clubBookId], references: [id], onDelete: Cascade)

  @@index([clubBookId, createdAt])
  @@index([userId])
}

model ClubBookArtifact {
  id               String   @id @default(cuid())
  clubBookId       String
  fileName         String
  mimeType         String
  size             Int
  url              String
  uploadedByUserId String
  createdAt        DateTime @default(now())

  clubBook ClubBook @relation(fields: [clubBookId], references: [id], onDelete: Cascade)

  @@index([clubBookId, createdAt])
  @@index([uploadedByUserId])
}

// Channels & Messages (initially raw SQL in microservices, now properly modeled)

model Channel {
  id        String   @id
  name      String
  type      String
  cityCode  String?
  createdAt DateTime @default(now())

  messages ChannelMessage[]
}

model ChannelMessage {
  id        String   @id
  channelId String
  userId    String
  text      String
  createdAt DateTime @default(now())

  channel Channel @relation(fields: [channelId], references: [id], onDelete: Cascade)

  @@index([channelId, createdAt])
}

model DirectMessage {
  id         String   @id
  fromUserId String
  toUserId   String
  text       String
  createdAt  DateTime @default(now())

  @@index([fromUserId, toUserId])
}

// --- FEED ---

model Post {
  id         String   @id @default(cuid())
  userId     String
  text       String
  imageUrl   String?
  clubBookId String?
  createdAt  DateTime @default(now())

  likes    Like[]
  comments Comment[]
  images   PostImage[]

  @@index([createdAt])
  @@index([userId])
  @@index([clubBookId])
}

model PostImage {
  id     String @id @default(cuid())
  postId String
  url    String
  index  Int    @default(0)

  post Post @relation(fields: [postId], references: [id], onDelete: Cascade)

  @@index([postId])
}

model Like {
  id        String   @id @default(cuid())
  postId    String
  userId    String
  type      String   @default("like")
  createdAt DateTime @default(now())

  post Post @relation(fields: [postId], references: [id], onDelete: Cascade)

  @@unique([postId, userId])
  @@index([userId])
  @@index([postId, type])
}

model Comment {
  id        String   @id @default(cuid())
  postId    String
  userId    String
  text      String
  createdAt DateTime @default(now())

  post Post @relation(fields: [postId], references: [id], onDelete: Cascade)

  @@index([createdAt])
  @@index([userId])
}

model Poll {
  id          String   @id @default(cuid())
  clubBookId  String?
  city        String   @default("FORTALEZA")
  userId      String
  question    String
  description String?
  imageUrl    String?
  multiChoice Boolean  @default(false)
  publicVotes Boolean  @default(false)
  createdAt   DateTime @default(now())

  options PollOption[]
  votes   PollVote[]

  @@index([clubBookId])
  @@index([city])
  @@index([createdAt])
}

model PollOption {
  id       String  @id @default(cuid())
  pollId   String
  type     String  @default("TEXT") // TEXT, BOOK
  text     String
  imageUrl String?
  bookId   String?
  index    Int

  poll  Poll       @relation(fields: [pollId], references: [id], onDelete: Cascade)
  book  Book?      @relation(fields: [bookId], references: [id])
  votes PollVote[]

  @@index([pollId])
  @@index([bookId])
}

model PollVote {
  id        String   @id @default(cuid())
  pollId    String
  optionId  String
  userId    String
  createdAt DateTime @default(now())

  poll   Poll       @relation(fields: [pollId], references: [id], onDelete: Cascade)
  option PollOption @relation(fields: [optionId], references: [id], onDelete: Cascade)

  @@unique([pollId, userId, optionId])
  @@index([pollId])
  @@index([optionId])
  @@index([userId])
}

// --- EVENTS ---

model ClubEvent {
  id              String    @id @default(cuid())
  title           String
  description     String
  city            String    @default("FORTALEZA") // FORTALEZA or BRASILIA
  location        String // Text address or name
  addressStreet   String?
  addressNumber   String?
  addressDistrict String?
  addressCity     String?
  addressState    String?
  addressZip      String?
  latitude        Float?
  longitude       Float?
  startAt         DateTime
  endAt           DateTime?
  clubBookId      String?
  clubBook        ClubBook? @relation(fields: [clubBookId], references: [id])
  // coverUrl removed
  createdById     String
  createdAt       DateTime  @default(now())

  participants ClubEventParticipant[]
  photos       ClubEventPhoto[]

  @@index([city])
  @@index([startAt])
}

model ClubEventParticipant {
  id        String   @id @default(cuid())
  eventId   String
  userId    String
  status    String   @default("confirmed") // confirmed, maybe, declined
  createdAt DateTime @default(now())

  event ClubEvent @relation(fields: [eventId], references: [id], onDelete: Cascade)

  @@unique([eventId, userId])
  @@index([eventId])
  @@index([userId])
}

model ClubEventPhoto {
  id        String   @id @default(cuid())
  eventId   String
  userId    String
  url       String
  caption   String?
  type      String   @default("GALLERY") // LOCATION, GALLERY
  createdAt DateTime @default(now())

  event ClubEvent @relation(fields: [eventId], references: [id], onDelete: Cascade)

  @@index([eventId])
  @@index([userId])
}
