generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = "file:dev.db"
}

model Post {
  id        String   @id @default(cuid())
  userId    String
  text      String
  imageUrl  String?
  clubBookId String?
  createdAt DateTime @default(now())

  likes    Like[]
  comments Comment[]
  images   PostImage[]

  @@index([createdAt])
  @@index([userId])
  @@index([clubBookId])
}

model PostImage {
  id      String @id @default(cuid())
  postId  String
  url     String
  index   Int @default(0)

  post    Post @relation(fields: [postId], references: [id], onDelete: Cascade)

  @@index([postId])
}

model Like {
  id     String @id @default(cuid())
  postId String
  userId String
  type   String @default("like")
  createdAt DateTime @default(now())

  post Post @relation(fields: [postId], references: [id], onDelete: Cascade)

  @@unique([postId, userId])
  @@index([userId])
  @@index([postId, type])
}

model Comment {
  id        String   @id @default(cuid())
  postId    String
  userId    String
  text      String
  createdAt DateTime @default(now())

  post Post @relation(fields: [postId], references: [id], onDelete: Cascade)

  @@index([createdAt])
  @@index([userId])
}
