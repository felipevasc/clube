generator client {
  provider      = "prisma-client-js"
  output        = "../src/generated/prisma"
  // Keep WSL/Linux working even if `prisma generate` runs on Windows.
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Group {
  id          String   @id @default(cuid())
  name        String
  description String
  ownerId     String
  createdAt   DateTime @default(now())

  memberships         Membership[]
  invites             GroupInvite[]
  joinRequests         JoinRequest[]
  bookOfMonthSelections GroupBookOfMonthSelection[]
}

model Membership {
  id      String @id @default(cuid())
  groupId String
  userId  String
  role    String

  group Group @relation(fields: [groupId], references: [id], onDelete: Cascade)

  @@unique([groupId, userId])
  @@index([userId])
}

model JoinRequest {
  id        String   @id @default(cuid())
  groupId   String
  userId    String
  status    String
  createdAt DateTime @default(now())

  group Group @relation(fields: [groupId], references: [id], onDelete: Cascade)

  @@unique([groupId, userId, status])
  @@index([userId])
}

model GroupInvite {
  id              String   @id @default(cuid())
  groupId          String
  createdByUserId  String
  createdAt        DateTime @default(now())
  revokedAt        DateTime?

  group Group @relation(fields: [groupId], references: [id], onDelete: Cascade)

  @@index([groupId])
  @@index([revokedAt])
}

model GroupBookOfMonthSelection {
  id          String   @id @default(cuid())
  groupId     String
  bookId      String
  setByUserId String
  setAt       DateTime @default(now())

  group Group @relation(fields: [groupId], references: [id], onDelete: Cascade)

  @@index([groupId, setAt])
  @@index([bookId])
}

model ClubBook {
  id              String   @id @default(cuid())
  bookId          String
  title           String
  author          String
  coverUrl        String   @default("")
  colorKey        String
  city            String   @default("FORTALEZA")
  month           Int
  year            Int
  isActive        Boolean  @default(false)
  createdByUserId String
  createdAt       DateTime @default(now())
  activatedAt     DateTime?

  messages  ClubBookMessage[]
  artifacts ClubBookArtifact[]

  @@index([createdAt])
  @@index([isActive])
  @@index([year, month, city])
}

model ClubBookMessage {
  id         String   @id @default(cuid())
  clubBookId String
  userId     String
  text       String
  createdAt  DateTime @default(now())

  clubBook ClubBook @relation(fields: [clubBookId], references: [id], onDelete: Cascade)

  @@index([clubBookId, createdAt])
  @@index([userId])
}

model ClubBookArtifact {
  id               String   @id @default(cuid())
  clubBookId       String
  fileName         String
  mimeType         String
  size             Int
  url              String
  uploadedByUserId String
  createdAt        DateTime @default(now())

  clubBook ClubBook @relation(fields: [clubBookId], references: [id], onDelete: Cascade)

  @@index([clubBookId, createdAt])
  @@index([uploadedByUserId])
}

// These are managed by raw SQL in src/routes.ts (not Prisma migrations).
model Channel {
  id        String   @id
  name      String
  type      String
  cityCode  String?
  createdAt DateTime @default(now())
}

model ChannelMessage {
  id        String   @id
  channelId String
  userId    String
  text      String
  createdAt DateTime @default(now())
}

model DirectMessage {
  id         String   @id
  fromUserId String
  toUserId   String
  text       String
  createdAt  DateTime @default(now())

  @@index([fromUserId, toUserId])
}
